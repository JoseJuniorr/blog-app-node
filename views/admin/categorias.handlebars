<div class="container">
    <h2>Lista de Categorias</h2>
    <hr>

    <a href="/admin/categorias/add" class="btn btn-success">Nova Categoria</a>


    {{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small><br>
            <small>Atualizado em: {{updatedAt}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}" class="btn btn-outline-primary mt-4">Editar</a>
        </div>
    </div>

    {{else}}

    {{/each}}

</div>